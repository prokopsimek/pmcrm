{
  "name": "personal-network-crm",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered SaaS platform for personal business network management",
  "scripts": {
    "dev": "turbo run dev",
    "start": "pnpm db:migrate:deploy && turbo run start",
    "start:backend": "pnpm db:migrate:deploy && pnpm --filter backend start:prod",
    "start:frontend": "pnpm --filter frontend start",
    "setup": "pnpm install && pnpm docker:up && sleep 5 && pnpm db:generate && pnpm db:migrate && echo 'âœ… Setup complete! Run: pnpm dev'",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:ci": "turbo run test --force",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:performance": "playwright test performance.spec.ts",
    "test:e2e:accessibility": "playwright test accessibility.spec.ts",
    "test:e2e:report": "playwright show-report",
    "quality:check": "pnpm format:check && turbo run lint type-check",
    "quality:fix": "pnpm format && pnpm lint:fix",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "clean:install": "pnpm clean && pnpm install",
    "docker:up": "pnpm --filter backend docker:up",
    "docker:down": "pnpm --filter backend docker:down",
    "docker:logs": "pnpm --filter backend docker:logs",
    "db:generate": "pnpm --filter backend prisma:generate",
    "db:migrate": "pnpm --filter backend prisma:migrate",
    "db:migrate:deploy": "pnpm --filter backend prisma:migrate:deploy",
    "db:migrate:create": "cd backend && pnpm prisma migrate dev --create-only --name",
    "db:migrate:status": "cd backend && pnpm prisma migrate status",
    "db:migrate:reset:dev": "cd backend && pnpm prisma migrate reset",
    "db:push": "pnpm --filter backend db:push",
    "db:studio": "pnpm --filter backend prisma:studio",
    "db:seed": "pnpm --filter backend prisma:seed",
    "db:reset": "pnpm --filter backend db:reset --force",
    "db:fresh": "pnpm db:migrate && echo 'âœ… Database migrations applied!'",
    "db:setup": "pnpm docker:up && sleep 3 && pnpm db:generate && pnpm db:migrate && echo 'âœ… Database setup complete!'"
  },
  "dependencies": {
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "@playwright/test": "^1.57.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "axe-playwright": "^2.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
