# Performance optimizations
legacy-peer-deps=false
prefer-offline=true
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Enable parallel installations
prefer-dedupe=true

# Cache settings
cache-min=10

# Registry settings (use your preferred registry)
# registry=https://registry.npmjs.org/

# Production optimizations
production=false

# Lockfile settings
package-lock=true

# Shrinkwrap
shrinkwrap=true
